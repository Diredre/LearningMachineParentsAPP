<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/gradient_bg_regist">

    <ImageView
        android:id="@+id/info_iv_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@mipmap/img10"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/info_rl_main"
        android:layout_marginBottom="20dp"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/info_iv_logo"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:text="LEARNING MACHINE"
            android:textColor="#ffffff"
            android:textSize="24sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CARING FOR YOUR CHILD"
            android:textColor="#ffffff"
            android:alpha="0.7"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/info_rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <LinearLayout
            android:id="@+id/info_ll_input"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dip"
            android:layout_centerHorizontal="true"
            android:background="@drawable/border_et_background"
            android:orientation="vertical"
            android:padding="10dip" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/info_iv_childename"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/info_et_childename"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@null"
                    android:hint="请输入孩子姓名"
                    android:maxLines="1"
                    android:textColor="#CCFFFFFF"
                    android:textColorHint="#88FFFFFF"
                    android:layout_marginLeft="10dip"
                    android:padding="5dip"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="#EFF9ED" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/info_iv_grade"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/info_tv_grade"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dip"
                    android:background="#00000000"
                    android:hint="请选择孩子年级"
                    android:textColor="#CCFFFFFF"
                    android:textColorHint="#88FFFFFF"
                    android:padding="5dip"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="#EFF9ED" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/info_iv_city"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/info_tv_city"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dip"
                    android:background="#00000000"
                    android:hint="请选择城市"
                    android:textColor="#CCFFFFFF"
                    android:textColorHint="#88FFFFFF"
                    android:padding="5dip"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="#EFF9ED" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/info_iv_address"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:id="@+id/info_et_address"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dip"
                    android:background="#00000000"
                    android:hint="请输入详细地址"
                    android:padding="5dip"
                    android:textColor="#CCFFFFFF"
                    android:textColorHint="#88FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/info_btn_com"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/info_ll_input"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dip"
            android:background="@drawable/border_btn_background"
            android:gravity="center"
            android:paddingBottom="2dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="2dip"
            android:text="完成"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:adjustViewBounds="true"
        android:alpha="0.7"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/img9"/>
</RelativeLayout>