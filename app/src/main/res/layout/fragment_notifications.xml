<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Discover.NotificationsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/discover_tit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@mipmap/fragtit"/>

            <!--广告位-->
            <androidx.cardview.widget.CardView
                android:id="@+id/discover_ad"
                android:layout_width="330dp"
                android:layout_height="60dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="广告位招租"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"/>
            </androidx.cardview.widget.CardView>


            <!--一堆图标区-->
            <LinearLayout
                android:id="@+id/discover_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/discover_ad"
                android:orientation="vertical">
                <!--第一排-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            android:src="@mipmap/logo1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:text="文具"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            android:src="@mipmap/logo2"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:text="资料"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            android:src="@mipmap/logo3"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:text="视频课"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            android:src="@mipmap/logo4"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:text="兴趣班"/>
                    </LinearLayout>
                </LinearLayout>

                <!--第二排-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            android:src="@mipmap/logo1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:text="亲子游"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            android:src="@mipmap/logo2"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:text="酒店"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            android:src="@mipmap/logo3"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:text="出行"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            android:src="@mipmap/logo4"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:text="美食"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--精选推荐-->
            <LinearLayout
                android:id="@+id/discover_recom"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_below="@id/discover_logo"
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:background="@mipmap/recom_back">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:src="@mipmap/recom"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="精选推荐"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="3dp"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_gravity="bottom"/>
                </LinearLayout>

                <!--推荐商品详情-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="#FFFFFF">
                    <ImageView
                        android:id="@+id/discover_iv_recomicon"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:id="@+id/discover_tv_recomtit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="大风：莫言给孩子的第一本图画书"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:layout_toRightOf="@id/discover_iv_recomicon"
                        android:maxLines="2"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="￥ 68.00"
                        android:textColor="@color/red_normal"
                        android:textSize="16sp"
                        android:layout_toRightOf="@id/discover_iv_recomicon"
                        android:layout_alignBottom="@id/discover_iv_recomicon"
                        android:layout_margin="10dp"/>
                </RelativeLayout>
            </LinearLayout>

            <!--商城 & 亲子游-->
            <RelativeLayout
                android:id="@+id/discover_con"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/discover_recom"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp">
                <View
                    android:id="@+id/discover_tv_shop_bg"
                    android:layout_width="45dp"
                    android:layout_height="5dp"
                    android:layout_alignBottom="@id/discover_tv_shop"
                    android:layout_alignLeft="@id/discover_tv_shop"
                    android:layout_marginLeft="-2dp"
                    android:background="#49DA9C"/>
                <TextView
                    android:id="@+id/discover_tv_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="商城"/>

                <View
                    android:id="@+id/discover_tv_family_bg"
                    android:layout_width="64dp"
                    android:layout_height="5dp"
                    android:visibility="invisible"
                    android:layout_alignBottom="@id/discover_tv_family"
                    android:layout_alignLeft="@id/discover_tv_family"
                    android:layout_marginLeft="-2dp"
                    android:background="#49DA9C"/>
                <TextView
                    android:id="@+id/discover_tv_family"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/discover_tv_shop"
                    android:layout_alignParentBottom="true"
                    android:text="亲子游"/>
            </RelativeLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/discover_vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/discover_con"/>

        </RelativeLayout>
    </ScrollView>

    <!--顶部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:background="#67E0A1"
        android:orientation="horizontal">
        <!--地区天气-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="杭州"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="2dp"
                    android:src="@mipmap/todown" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="小雨 20℃"
                android:textSize="12sp"/>
        </LinearLayout>

        <!--搜索框-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:elevation="3dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/border_search"
                android:elevation="1dp"
                android:paddingLeft="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/search" />
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:hint="请输入搜索内容"
                    android:textColorHint="#BCC8D4"
                    android:maxLines="1"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <!--语音识别-->
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/voice"/>
    </LinearLayout>

</RelativeLayout>