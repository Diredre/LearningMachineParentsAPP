<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Circle.DashboardFragment">

    <!--顶部-->
    <RelativeLayout
        android:id="@+id/hp_ll_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:elevation="5dp">
        <com.example.learningmachineparentsapp.View.RoundImageView
            android:id="@+id/hp_riv_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/added"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="圈子"
                android:layout_centerInParent="true"
                android:textSize="18sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/circle_friend"
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <ImageView
            android:id="@+id/circle_iv_friend"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/topic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="家长社交圈"
            android:layout_toRightOf="@+id/circle_iv_friend"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/next"/>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="#D7D7D7"/>

    <RelativeLayout
        android:id="@+id/circle_video"
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <ImageView
            android:id="@+id/circle_iv_video"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/topic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="短视频"
            android:layout_toRightOf="@+id/circle_iv_video"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/next"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#E8E8E8"/>

</LinearLayout>