<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.example.learningmachineparentsapp.View.TitleLayout
        android:id="@+id/goods_detail_tit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_detail_tit">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/goods_detail_iv_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"/>
            <RelativeLayout
                android:id="@+id/goods_detail_rl1"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@id/goods_detail_iv_icon">
                <TextView
                    android:id="@+id/goods_detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="LED儿童智能魔方"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/goods_detail_name"
                    android:layout_alignParentBottom="true"
                    android:gravity="bottom"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="13sp"
                    android:textColor="#404040"
                    android:text="儿童 智能 益智 小玩具"/>
                <TextView
                    android:id="@+id/goods_detail_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="￥198"
                    android:textColor="@color/solar_background"
                    android:textSize="18sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/goods_detail_rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/goods_detail_rl1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/goods_detail_iv_like"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="12sp"
                        android:text="推荐"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/goods_detail_iv_choose"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="12sp"
                        android:text="帮我选"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/goods_detail_iv_share"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="12sp"
                        android:text="分享"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/goods_detail_rl3"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/goods_detail_rl2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#E8E8E8"/>
            <RelativeLayout
                android:id="@+id/goods_detail_rl4"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/goods_detail_rl3">
                <TextView
                    android:id="@+id/goods_detail_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="选择"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/goods_detail_tv1"
                    android:text="尺寸分类"
                    android:textSize="14sp"
                    android:textColor="#BFBFBF"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/next"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/goods_detail_rl5"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/goods_detail_rl4">
                <TextView
                    android:id="@+id/goods_detail_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="发货"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/goods_detail_tv2"
                    android:text="浙江杭州 | 快递：免运费 | 付款后48小时内发货"
                    android:textSize="14sp"
                    android:textColor="#BFBFBF"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/goods_detail_rl6"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/goods_detail_rl5">
                <TextView
                    android:id="@+id/goods_detail_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="月销"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/goods_detail_tv3"
                    android:text="100+"
                    android:textSize="14sp"
                    android:textColor="#BFBFBF"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/goods_detail_rl7"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/goods_detail_rl6">
                <TextView
                    android:id="@+id/goods_detail_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="保障"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/goods_detail_tv4"
                    android:text="7天无理由退货 | 公益宝贝"
                    android:textSize="14sp"
                    android:textColor="#BFBFBF"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/goods_detail_rl8"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/goods_detail_rl7">
                <TextView
                    android:id="@+id/goods_detail_tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="参数"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/goods_detail_tv5"
                    android:text="品牌 | 型号"
                    android:textSize="14sp"
                    android:textColor="#BFBFBF"/>
            </RelativeLayout>
            <View
                android:id="@+id/goods_detail_rl9"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/goods_detail_rl8"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#E8E8E8"/>
        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/goods_detail_tv_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFC107"
            android:clickable="true"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="#FAFAFA" />
        <TextView
            android:id="@+id/goods_detail_tv_pay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#49DA9C"
            android:clickable="true"
            android:gravity="center"
            android:text="直接购买"
            android:textColor="#FAFAFA" />
    </LinearLayout>
</RelativeLayout>