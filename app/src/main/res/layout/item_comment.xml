<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/item_videocom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="5dp">
        <com.example.learningmachineparentsapp.View.RoundImageView
            android:id="@+id/item_videocom_userLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon"
            android:layout_marginLeft="16dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_videocom_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF5722"
                android:textSize="16sp"
                android:text="沐风" />
            <TextView
                android:id="@+id/item_videocom_story"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="水光潋滟晴方好，山色空蒙雨亦奇。\n欲把西湖比西子，淡抹浓妆总相宜。"
                android:maxLines="4"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="#6e6e6e"/>
            <TextView
                android:id="@+id/item_videocom_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1小时前"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:textColor="#989898"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/item_videocom_iv_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/love"/>
            <TextView
                android:id="@+id/item_videocom_tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="66"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/item_videocom_ll"
        android:background="#e6e6e6"/>
</RelativeLayout>